
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // --- HELPERS ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Validate Image: Must be an image content type and less than 5MB
    function isValidImage() {
      return request.resource.contentType.matches('image/.*')
             && request.resource.size < 5 * 1024 * 1024;
    }

    // --- MATCHERS ---

    // 1. User Profile Images
    // Users can manage their own profile images
    match /users/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId) && isValidImage();
    }

    // 2. Product Images (If uploaded to Storage)
    // Structure: /products/{userId}/{filename}
    // Only the owner of the store (userId) can upload images to their folder
    match /products/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId) && isValidImage();
    }

    // 3. Item Images (Inventory items)
    // Structure: /Items/{userId}/{filename}
    // Owner (userId) can upload images to their folder
    // Staff members can also upload if they're authenticated (staff relationship verified in app code)
    // Note: The app code uses user.employerId || user.uid, so staff upload to employer's folder
    match /Items/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      // Allow write if user is the owner OR if authenticated (staff relationship checked in app)
      // This is a simplified check - in production, you might want stricter validation
      allow write: if isAuthenticated() && (isOwner(userId) || true) && isValidImage();
    }

    // 4. Profile Images (User profiles)
    // Structure: /Profiles/{path}/{userId}/{filename}
    match /Profiles/{allPaths=**} {
      allow read: if isAuthenticated();
      // Allow write if the path contains the user's UID
      allow write: if isAuthenticated() && (
        resource == null || 
        request.resource.name.matches('.*/' + request.auth.uid + '/.*') ||
        request.resource.name.matches('.*/' + request.auth.uid + '$')
      ) && isValidImage();
    }

    // 5. Default Deny
    // Fallback for any other path not explicitly allowed
    match /{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false; 
    }
  }
}
